@page
@model BooklistRazor.Pages.Booklist.UpsertModel
@{
    ViewData["Title"] = "Upsert";
}

    <div class="container row">
        <h3 class="text-info">@(Model.Book.Id==0? "Create": "Edit") a book</h3>

        <div class="container border mt-3 mb-3 p-3">
            <form method="post">
                <input type="hidden" asp-for="Book.Id" />
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Book.Name"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Book.Name" class="form-control" placeholder="Enter a book name" id="name" />
                    </div>
                    <span class="text-danger" asp-validation-for="Book.Name"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Book.Author"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Book.Author" class="form-control" placeholder="Enter an author name" id="author" />
                    </div>
                    <span class="text-danger" asp-validation-for="Book.Author"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Book.ISBN"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Book.ISBN" class="form-control" placeholder="Enter ISBN" id="isbn" />
                    </div>
                    <span class="text-danger" asp-validation-for="Book.ISBN"></span>
                </div>
                <div class="form-group row">
                    <div class="col-3 offset-2">
                        @if (Model.Book.Id == 0)
                        {
                            <input type="submit" class="btn btn-success form-control" value="Add" />
                        }
                        else
                        {
                            <input type="submit" class="btn btn-success form-control" value="Update" />
                        }
                    </div>
                    <div class="col-3">
                        <a asp-page="Index" class="btn btn-info form-control">Back to list</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

