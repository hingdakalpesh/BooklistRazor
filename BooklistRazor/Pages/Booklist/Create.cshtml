@page
@model BooklistRazor.Pages.Booklist.CreateModel
@{
    ViewData["Title"] = "Add Book";
}

<div class="container row">
    <h3 class="text-info">Add a new book</h3>

    <div class="container border mt-3 mb-3 p-3">
        <form method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="books.Name"></label>
                </div>
                <div class="col-6">
                    <input asp-for="books.Name" class="form-control" placeholder="Enter a book name" id="name" />
                </div>
                <span class="text-danger" asp-validation-for="books.Name"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="books.Author"></label>
                </div>
                <div class="col-6">
                    <input asp-for="books.Author" class="form-control" placeholder="Enter an author name" id="author" />
                </div>
                <span class="text-danger" asp-validation-for="books.Author"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="books.ISBN"></label>
                </div>
                <div class="col-6">
                    <input asp-for="books.ISBN" class="form-control" placeholder="Enter ISBN" id="isbn" />
                </div>
                <span class="text-danger" asp-validation-for="books.ISBN"></span>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-2" >
                    <input type ="submit" class="btn btn-success form-control" value="Add"/> 
                </div>
                <div class="col-3">
                    <a asp-page="Index" class="btn btn-info form-control">Back to list</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}
